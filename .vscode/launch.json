    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Runner standalone",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/runner",
            "env": {},
            "envFile": "${workspaceFolder}/debug_runner_${env:USER}.env",
            "args": ["-s", "localhost:4222", "-c", "cntrrunnerdebug"]
        },
        {
            "name": "Launch Controller standalone",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/controller",
            "env": {},
            "envFile": "${workspaceFolder}/debug_controller_${env:USER}.env",
            "args": []
        }
    ]
}