    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Runner standalone",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/runner",
            "env": {
                "ARTIFACTS_DIRECTORY":"/Users/${env:USER}/tmp/temp_cloudshipper/artifacts"
            },
            "args": ["-s", "localhost:4222", "-c", "cntrrunnerdebug"]
        },
        {
            "name": "Launch Controller standalone",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/controller",
            "env": {},
            "args": [
                "-s", "localhost:4222", 
                "-m", "Kubernetes", 
                "-cluster-id", "example-stan", 
                "-q", "jobqueue", 
                "-publish-subscription",
                "agentevents"]
        },
        {
            "name": "Launch LiveStream Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/livestreamclient",
            "env": {},
            "args": ["-s", "localhost:4222", "-l", "agentlive", "-cluster-id", "example-stan"]
        },
        {
            "name": "Launch JobClient Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/jobclient",
            "env": {},
            "args": ["-s", "localhost:4222", "-cluster-id", "example-stan", "-q", "jobqueue", "-yaml-definition", "./definition.yaml", "-yaml-parameters", "./parameters.yaml"]
        }
    ]
}